{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
  "files": {
    "ignore": [
      "./node_modules/**",
      "./public/**",
      "./dist/**",
      "./.astro/**"
    ]
  },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "semicolons": "always"
    }
  }
}
